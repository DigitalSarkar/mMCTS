<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Noactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelText">
        <item name="android:textColor">@color/header_dark</item>
        <item name="android:textSize">@dimen/scale_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ValueText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/scale_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToastText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/scale_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListText">
        <item name="android:textColor">@color/deep_purpel</item>
        <item name="android:textSize">@dimen/scale_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/scale_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
