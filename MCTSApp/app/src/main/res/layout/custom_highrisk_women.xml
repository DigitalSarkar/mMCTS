<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_high_risk_women"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_dark"
        android:gravity="center_horizontal"
        android:padding="@dimen/scale_5"
        android:text="@string/high_risk_mom"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_font" />

    <ExpandableListView
        android:id="@+id/exp_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ExpandableListView>

    <Button
        android:id="@+id/bt_save_high_risk"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_5"
        android:padding="@dimen/scale_10"
        android:text="@string/save" />
</LinearLayout>