<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/chk_symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.mcts.app.customview.MyTextView
        android:id="@+id/lblListItem"
        style="@style/ValueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_10"
        android:layout_weight="7"
        android:text="dshjbsjb" />

    <EditText
        android:id="@+id/ed_year"
        style="@style/ValueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="3"
        android:layout_margin="@dimen/scale_5"
        android:hint="@string/year"></EditText>

</LinearLayout>