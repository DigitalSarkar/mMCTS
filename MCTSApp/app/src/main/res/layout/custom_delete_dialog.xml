<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_delete"
    android:background="@drawable/round_corner_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mcts.app.customview.MyTextView
            android:id="@+id/txt_delete_title"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:text="@string/street_name" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_delete_yes"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10"
            android:layout_weight="1"
            android:padding="@dimen/scale_10"
            android:text="@string/family_yes" />

        <Button
            android:id="@+id/bt_delete_no"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10"
            android:layout_weight="1"
            android:padding="@dimen/scale_10"
            android:text="@string/family_no" />
    </LinearLayout>
</LinearLayout>
