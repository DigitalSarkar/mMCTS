<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_migrate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mcts.app.customview.MyTextView
        style="@style/ValueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_dark"
        android:gravity="center_horizontal"
        android:padding="@dimen/scale_10"
        android:text="@string/Please_migration" />

    <LinearLayout
        android:id="@+id/ll_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mcts.app.customview.MyTextView
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="4"
            android:text="@string/migrate_place" />

        <Spinner
            android:id="@+id/sp_migrate_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="6"
            android:entries="@array/migrate_array"
            android:spinnerMode="dialog"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView
                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/state" />

            <Spinner
                android:id="@+id/sp_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_out_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView
                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/dist" />

            <Spinner
                android:id="@+id/sp_dirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView
                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/taluko" />

            <Spinner
                android:id="@+id/sp_taluka"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView
                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/select_village" />

            <Spinner
                android:id="@+id/sp_migrate_village"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_migrate_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView
                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/migrate_type" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdb_parmenant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.mcts.app.customview.MyTextView
                        style="@style/ValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:text="@string/parmenant" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdb_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.mcts.app.customview.MyTextView
                        style="@style/ValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:text="@string/temp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_migrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:padding="@dimen/scale_10"
            android:text="@string/Please_migration" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:padding="@dimen/scale_10"
            android:text="@string/go_back" />
    </LinearLayout>
</LinearLayout>
