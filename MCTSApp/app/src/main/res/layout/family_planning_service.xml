<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_family_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/custom_toolbar"></include>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView

                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/village_name" />

                    <com.mcts.app.customview.MyTextView
                        android:id="@+id/txt_village_name"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:text="@string/village_name"></com.mcts.app.customview.MyTextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mcts.app.customview.MyTextView
                            style="@style/LabelText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="4"
                            android:text="@string/fm_walfare_name" />

                        <com.mcts.app.customview.MyTextView
                            android:id="@+id/txt_fm_walfare_name"
                            style="@style/ValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="6"
                            android:text="@string/fm_walfare_name"></com.mcts.app.customview.MyTextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/Family_welfare" />


                    <Spinner
                        android:id="@+id/sp_fm_method"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"

                        android:spinnerMode="dialog"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/fm_walfare_date" />


                    <EditText
                        android:id="@+id/ed_fm_walfare_date"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:focusable="false"
                        android:hint="@string/fm_walfare_date"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coppert_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/coppert_type" />


                    <Spinner
                        android:id="@+id/sp_coppert_type"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:entries="@array/copper_type"
                        android:spinnerMode="dialog"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/service_place" />


                    <EditText
                        android:id="@+id/ed_service_place"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:focusable="false"
                        android:hint="@string/service_place"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/service_place_name" />


                    <EditText
                        android:id="@+id/ed_service_place_name"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:focusable="false"
                        android:hint="@string/service_place_name"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/service_given_by" />


                    <EditText
                        android:id="@+id/ed_service_given_by"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:focusable="false"
                        android:hint="@string/service_given_by"></EditText>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_save_fm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/scale_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:padding="@dimen/scale_10"
                    android:text="@string/save" />

                <Button
                    android:id="@+id/bt_edit_fm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/scale_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:padding="@dimen/scale_10"
                    android:text="@string/Cancel" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>