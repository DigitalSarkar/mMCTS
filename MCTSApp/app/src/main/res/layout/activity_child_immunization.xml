<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_child_immunization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/custom_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView

                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/village_name" />

            <com.mcts.app.customview.MyTextView
                android:id="@+id/txt_village_name"
                style="@style/ValueText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:text="@string/village_name"></com.mcts.app.customview.MyTextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView

                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/prag_name" />

            <com.mcts.app.customview.MyTextView
                android:id="@+id/txt_child_name"
                style="@style/ValueText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:text="@string/prag_name"></com.mcts.app.customview.MyTextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mcts.app.customview.MyTextView

                style="@style/LabelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="4"
                android:text="@string/Birth_date" />

            <com.mcts.app.customview.MyTextView
                android:id="@+id/txt_child_birth_date"
                style="@style/ValueText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:layout_weight="6"
                android:text="@string/Birth_date"></com.mcts.app.customview.MyTextView>
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/list_child_immunization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
