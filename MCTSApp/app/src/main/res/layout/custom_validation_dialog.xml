<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10"
            android:background="@drawable/round_corner_bg"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/scale_5"
                android:text="@string/missing_fields"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_font" />

            <TextView
                android:id="@+id/txt_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/scale_5"
                android:text="@string/loading"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_font" />

            <Button
                android:id="@+id/bt_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scale_5"
                android:background="@drawable/button_selector"
                android:padding="@dimen/scale_10"
                android:text="@string/family_yes" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
