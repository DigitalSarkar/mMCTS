<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_family_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/custom_toolbar"></include>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/discontinue_date" />


                    <EditText
                        android:id="@+id/ed_discontinue_date"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:focusable="false"
                        android:hint="@string/discontinue_date"></EditText>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mcts.app.customview.MyTextView
                        style="@style/LabelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="4"
                        android:text="@string/discontinue_reason" />


                    <Spinner
                        android:id="@+id/sp_discontinue_reason"
                        style="@style/ValueText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/scale_5"
                        android:layout_weight="6"
                        android:spinnerMode="dialog"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mcts.app.customview.MyTextView
                            style="@style/LabelText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="4"
                            android:text="@string/post_fp_complication" />


                        <Spinner
                            android:id="@+id/sp_post_fp_complication"
                            style="@style/ValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="6"
                            android:spinnerMode="dialog"></Spinner>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mcts.app.customview.MyTextView
                            style="@style/LabelText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="4"
                            android:text="@string/complication_date" />


                        <EditText
                            android:id="@+id/ed_complication_date"
                            style="@style/ValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="6"
                            android:focusable="false"
                            android:hint="@string/complication_date"></EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mcts.app.customview.MyTextView
                            style="@style/LabelText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="4"
                            android:text="@string/complication_result" />


                        <Spinner
                            android:id="@+id/sp_complication_result"
                            style="@style/ValueText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/scale_5"
                            android:layout_weight="6"
                            android:spinnerMode="dialog"></Spinner>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_save_fmp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/scale_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:padding="@dimen/scale_10"
                    android:text="@string/save" />

                <Button
                    android:id="@+id/bt_edit_fmp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/scale_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:padding="@dimen/scale_10"
                    android:text="@string/Cancel" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>