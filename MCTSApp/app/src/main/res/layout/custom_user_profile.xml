<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_userprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">


    <com.mcts.app.customview.CircleImageView
        android:id="@+id/img_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/scale_10"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mcts.app.customview.MyTextView

            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="4"
            android:text="@string/Name" />

        <EditText
            android:id="@+id/ed_user_name"
            android:layout_width="0dp"
            style="@style/ValueText"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="6"
            android:singleLine="true"
            android:hint="@string/Name"></EditText>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mcts.app.customview.MyTextView

            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="4"
            android:text="@string/husband_name" />

        <EditText
            android:id="@+id/ed_user_middle_name"
            android:layout_width="0dp"
            style="@style/ValueText"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="6"
            android:singleLine="true"
            android:hint="@string/husband_name"></EditText>
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mcts.app.customview.MyTextView

            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="4"
            android:text="@string/Sir_Name" />

        <EditText
            android:id="@+id/ed_user_sir_name"
            android:layout_width="0dp"
            style="@style/ValueText"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_5"
            android:layout_weight="6"
            android:singleLine="true"
            android:hint="@string/Sir_Name"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_user_save"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10"
            android:layout_weight="1"
            android:padding="@dimen/scale_10"
            android:text="@string/save" />

        <Button
            android:id="@+id/bt_user_cancel"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10"
            android:layout_weight="1"
            android:padding="@dimen/scale_10"
            android:text="@string/go_back" />
    </LinearLayout>

</LinearLayout>